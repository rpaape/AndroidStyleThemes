<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="android:Theme.Material.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:colorAccent">@android:color/darker_gray</item>

  </style>

  <style name="BlurredBackgroundImageStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:scaleType">centerCrop</item>
  </style>

  <style name="PlaybackScreenArtistStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">-8dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:textColor">#dedede</item>
    <item name="android:textSize">18sp</item>
    <item name="android:typeface">normal</item>
  </style>

  <style name="PlaybackScreenSongStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#f3f3f3</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="SettingsTextStyle">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="SettingsToolbarStyle">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">?android:attr/actionBarSize</item>
    <item name="android:background">#2a2a2a</item>
    <item name="android:theme">?android:attr/actionBarTheme</item>
    <item name="layout_constraintTop_toTopOf">parent</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
  </style>

  <style name="SettingsToolbarTextStyle" parent="SettingsTextStyle">
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="SettingsEditTextStyle">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">64dp</item>
    <item name="android:layout_marginRight">64dp</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
    <item name="android:ems">10</item>
  </style>

  <style name="SettingsUsernameStyle" parent="SettingsEditTextStyle">
    <item name="android:hint">username</item>
    <item name="android:inputType">textPersonName</item>
  </style>

  <style name="SettingsEmailStyle" parent="SettingsEditTextStyle">
    <item name="android:hint">email</item>
    <item name="android:inputType">textEmailAddress</item>
  </style>

  <style name="SettingsSeekBarStyle">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">32dp</item>
    <item name="android:layout_marginRight">32dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
  </style>

  <style name="SettingsSwitchStyle">
    <item name="android:textSize">18sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">64dp</item>
    <item name="android:layout_marginRight">64dp</item>
    <item name="layout_constraintRight_toRightOf">parent</item>
    <item name="layout_constraintLeft_toLeftOf">parent</item>
  </style>

</resources>